<h1>New Customer</h1>

<%= form_for @customer do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <div class="form-control">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <div class="form-control">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone %>
    <div class="form-control">
      <%= f.text_field :phone %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :avatar %>
    <div class="form-control">
      <%= f.file_field :avatar %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :smoker %>
    <% { 'Y' => 'Sim', 'N' => 'NÃ£o' }.each do |key, value| %>
    <div class="form-control">
      <%= f.radio_button :smoker, key %><%= value %><br />
    </div>
    <% end %>
  </div>

  <%= f.submit 'Create Customer' %>
<% end %>